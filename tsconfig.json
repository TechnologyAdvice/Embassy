{
  "compilerOptions": {
    "lib": ["es2017"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es2016",
    "outDir": "dist",
    "sourceRoot": "src",
    "esModuleInterop": true,
    "declaration": true,
    "module": "CommonJS"
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules/**/*", ".vscode/**/*"]
}
